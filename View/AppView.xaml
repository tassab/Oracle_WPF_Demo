<Window x:Class="TestApp.AppView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="WPF Oracle Test App" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:EmployeeSelectorVM}">
            <local:EmployeeSelector />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EmployeeConfiguratorVM}">
            <local:EmployeeConfigurator />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EmployeeModifierVM}">
            <local:EmployeeModifier />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EmployeeSelectorAdderVM}">
            <local:EmployeeSelectorAdder />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MainMenuVM}">
            <local:MainMenu />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentVM}" />
    </Grid>
</Window>
